---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { StickyHeader, Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Products",
    path: "#",
    children: [
      { title: "Product Overview", path: "/product" },
      { title: "Applications", path: "/apps" },
      { title: "Integrations", path: "/integrations" },
      { title: "Empress OS", path: "/os" },
      { title: "Empress Chat Bots", path: "/chat" },
      { title: "Empress Insights", path: "/insights" },
    ],
  },
  {
    title: "Solutions",
    path: "#",
    children: [
      { title: "Customer Support", path: "/customer-support" },
      { title: "Human Resources", path: "/human-resources" },
      { title: "Operations", path: "/operations" },
      { title: "Marketing", path: "/marketing" },
      { title: "Leadership", path: "/leadership" },
      { title: "E-Commerce", path: "/e-commerce" },
      { title: "Financial Services", path: "/financial-services" },
      { title: "Technology", path: "/technology" },
      { title: "Healthcare", path: "/healthcare" },
      { title: "Education", path: "/education" },
      { title: "Enterprise", path: "/enterprise" },
      { title: "Startups", path: "/startups" },
      { title: "Agencies", path: "/agencies" },
      { title: "Influencers", path: "/influencers" },
      { title: "Non-Profits", path: "/non-profits" },
    ],
  },
  {
    title: "Developers",
    path: "#",
    children: [
      { title: "Documentation", path: "https://docs.empress.eco" },
      { title: "Prebuilt Portal", path: "https://docs.empress.eco/experiences/portal" },
      { title: "Libraries and SDKs", path: "https://docs.empress.eco/development" },
      { title: "Plugins", path: "https://docs.empress.eco/connectors" },
      { title: "Code Samples", path: "https://github.com/empress-samples" },
      { title: "Empress Quickstart", path: "https://docs.empress.eco/" },
      { title: "Empress OS for Developers", path: "https://docs.empress.eco/" },
      { title: "Empress Chat for Developers", path: "https://docs.empress.eco/" },
      { title: "Empress Insights for Developers", path: "https://docs.empress.eco/" },    
    ],
  },
  {
    title: "Resources",
    path: "#",
    children: [
      { title: "Empress Blog", path: "/blog" },
      { title: "Empress Guides", path: "/guides" },
      { title: "Empress Academy", path: "/academy" },
      { title: "Find Support", path: "https://support.empress.eco/en/" },
      { title: "Join the Community", path: "/community" },
      { title: "Become an Advocate", path: "/advocate" },
    ],
  },
  {
    title: "Contact Sales",
    path: "/contact",
  },
  {
    title: "Pricing",
    path: "/pricing",
  }
];
---

<StickyHeader
  class="sticky top-0 border-b z-20 transition-all"
  scrollY={50}
  defaultClass="py-5 border-transparent"
  activeClass="py-2 bg-white/80 border-gray-200 backdrop-blur-lg">
  <Container>
    <div class="flex flex-col lg:flex-row justify-between items-center relative z-10" transition:animate="none">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between">
          <a href="/" class="text-lg flex items-center transition focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded-full px-2 -ml-2">
            <span class="font-bold text-indigo-600">empress</span>
            <span class="text-slate-600">.eco</span>
            <span class="uppercase mt-0.5 leading-none text-[10px] ml-1 font-bold bg-gray-200 text-slate-700 px-2 py-1 rounded-md">BETA</span>
          </a>
          <div class="block lg:hidden">
            <MenuIcon class="w-4 h-4 text-gray-800" />
          </div>
        </div>
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <slot name="menu-items">
            <ul class="flex flex-col lg:flex-row lg:gap-3">
              {menuitems.map((item, index) => (
                <>
                  {item.children ? (
                    <Dropdown title={item.title} children={item.children} lastItem={index === menuitems.length - 1} />
                  ) : (
                    <li>
                      <a href={item.path} class="flex lg:px-3 py-2 text-sm text-gray-600 hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-offset-2 transition focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded-full">
                        {item.title}
                      </a>
                    </li>
                  )}
                </>
              ))}
            </ul>
          </slot>
        </MenuItems>
      </Astronav>
      <div>
        <div class="hidden lg:flex items-center gap-4">
          <a href="#" class="text-sm px-2 py-1 transition focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded-full">Log in</a>
          <Link href="#" size="sm" class="inline-flex items-center group gap-px">
            <span>Try for Free</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 mt-px group-hover:translate-x-1 transition-transform">
              <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"></path>
            </svg>
          </Link>
        </div>
        <div class="lg:hidden flex items-center gap-4">
          {/* ... (mobile menu contents) ... */}
          {/* Continue on next step */}
        </div>
      </div>
    </div>
  </Container>
</StickyHeader>


