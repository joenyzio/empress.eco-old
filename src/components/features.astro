---
// @ts-ignore
import Badge from "@components/ui/badge.astro";
import { Icon } from "astro-icon";

const features = [
  {
    "title": "Precision-Driven Creativity",
    "description": "Harness our toolkit to design immersive content and experiences from scratch, streamlining your creative process.",
    "icon": "fluent:document-javascript-24-regular"
  },
  {
    "title": "Seamless Content Integration",
    "description": "Already on another platform? Easily integrate it with ours, enabling tracking and optimization without any hassles.",
    "icon": "fluent:trophy-24-regular"
  },
  {
    "title": "Unified User Dashboard",
    "description": "Get a consolidated view of your engagements, analytics, and content. Say goodbye to the chaos of scattered information.",
    "icon": "fluent:box-24-regular"
  },

    {
    "title": "Instant Feedback & Adjustments",
    "description": "Get live insights into user behavior and make on-the-spot modifications to enhance their experience.",
    "icon": "fluent:box-multiple-24-regular"
  },
  {
    "title": "Write Once, Pubish Everywhere.",
    "description": "Ensure your content is available and responsive. No matter the device—be it mobile, desktop, or tablet—deliver an impeccable user experience.",
    "icon": "fluent:book-search-24-regular"
  },
  {
    "title": "Hands-On Expert Assistance",
    "description": "Whether you have a question or need us to manage the entire experience design, our team is here to support every step of the way",
    "icon": "fluent:people-community-24-regular"
  }
];
---

<!-- <div class="mt-16">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    We have got more awesome <span class="text-indigo-600">features</span>
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Use this section to highlight not so important features of your product.
  </p>
</div> -->
<div class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center">
  <Badge color="purple">MORE FEATURES</Badge>
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-4 text-center">
    We've got you covered
  </h2>
  <p class="text-lg mt-4 text-slate-600 text-center [text-wrap:pretty]">
    Empress covers all things experience. If you don't find what you're looking
    for, contact us and we'll either help you or steer you in the right
    direction.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-8 md:gap-16">
  {
    features.map((item) => (
      <div class="flex flex-col gap-4 items-start group hover:bg-slate-50 hover:border-slate-100 border border-transparent rounded-lg transition-all md:-m-5 p-5">
        <div class="mt-1 bg-indigo-50 border shadow shadow-indigo-100/50 border-indigo-100 transition-colors rounded-lg grid place-items-center  p-2 w-10 h-10 shrink-0">
          <Icon class="text-indigo-500" name={item.icon} size="24" />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
