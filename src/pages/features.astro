    <div class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center"></div>

    <Container>
      <Sectionhead>
        <Fragment slot="title">Integrations</Fragment>
        <Fragment slot="desc">
          Connect over 200+ tools with our easy to use integrations.
        </Fragment>
      </Sectionhead>
  
      <div class="grid md:grid-cols-2 lg:grid-cols-3 my-24 gap-x-10 gap-y-24">
        {
          integrations.map((item) => (
            <div class="rounded-2xl relative flex items-center flex-col p-6 group bg-white transition ring-2 ring-slate-200/50 shadow hover:ring-slate-200 hover:shadow-md">
              <div class="ring-2 ring-slate-200/50 w-16 h-16 group-hover:ring-slate-200 transition shadow shadow-slate-100 rounded-lg grid place-items-center -mt-16 bg-white">
                <item.Icon class="w-8 h-8" />
              </div>
  
              <h3 class="text-xl lg:text-2xl font-medium mt-4">{item.name}</h3>
              <p class="text-slate-600 mt-2 text-center [text-wrap:balance]">
                {item.description}
              </p>
  
              <div class="mt-3">
                <a
                  href={item.link}
                  class="text-sm px-2 transition py-1 text-indigo-600 hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded-full">
                  View Integration
                  <span class="absolute inset-0" />
                </a>
              </div>
            </div>
          ))
        }
      </div>

      <div class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center">
        <Badge color="purple">Additional Resources</Badge>
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-4 text-center">
          We're Here to Support You
