        <Card size="sm">
          <Fragment slot="image">
            <!-- // svg image. cannot use <picture/> as of now -->
            <Image
              src={IntegrationImg}
              alt="Feature image"
              width="909"
              height="823"
              class="h-full w-full object-contain"
              loading="lazy"
            />
