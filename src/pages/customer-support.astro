              </div>
          </div>
          
          <!-- Product Image: Astronaut Illustration -->
          <div class="py-3 lg:col-span-3 lg:-mr-44">
              <Picture
                  src={heroImage}
                  alt="Innovative Astronaut Imagery"
                  formats={["avif", "webp"]}
                  sizes="(max-width: 1024px) 100vw, 50vw"
                  widths={[240, 540, 720, heroImage.width]}
                  loading="eager"
                  fetchpriority="high"
              />
          </div>
      </main>
  </Container>
  
  </div>
  

  <Container>
  
