// Filter team entries with 'draft: false' & date before current date
const publishedTeamMembers = await getCollection("team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});

const features = [
  {
    "title": "Slack Synergy",
    "description": "Achieve instantaneous response rates by integrating support queries directly into Slack, drastically improving your issue resolution times.",
    "icon": "fluent:document-javascript-24-regular"
  },
  {
    "title": "Real-time Email Notifications",
    "description": "Bridge the communication gap by updating users instantly. Enhance trust by providing transparent progress updates on support.",
    "icon": "fluent:trophy-24-regular"
  },
  {
    "title": "Instant Messenger Support",
    "description": "Harness the power of platforms like Messenger to assist customers in real-time, ensuring they always have a superior support experience.",
    "icon": "fluent:box-24-regular"
  },
  {
    "title": "Dynamic Discord Support",
    "description": "Elevate your community interactions on Discord with immediate support interventions, fostering a sense of belonging and trust.",
    "icon": "fluent:document-javascript-24-regular"
  },
  {
    "title": "Universal Engagement",
    "description": "Eliminate language barriers using AI-driven translations, ensuring every user feels valued, regardless of linguistic differences.",
    "icon": "fluent:trophy-24-regular"
  },
  {
    "title": "Seamless Support Workflows",
    "description": "Empower your customer support team with streamlined integrations that enable efficient, quick, and hassle-free operations.",
    "icon": "fluent:box-24-regular"
