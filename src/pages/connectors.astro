---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Picture, Image } from "astro:assets";
import {
  Zapier,
  Intercom,
  Shopify,
  Messenger,
  Discord,
} from "@components/ui/icons";

// SVG imports
import trello from "../assets/apps/business-planning.svg";
import CloudServices from "../assets/features/cloud-services.svg";
import MobileApp from "../assets/features/mobile-apps.svg";


const applications = [
  {
    name: "Websites",
    description: "Build and customize websites effortlessly.",
    icon: trello,  // Replace "Slack" with the appropriate icon name if different
    link: "/apps",
  },
  {
    name: "Sales",
    description: "Simplify online sales and store management.",
    icon: trello,  // Replace "Slack" with the appropriate icon name if different
    link: "/apps",
  },
  {
    name: "Finance",
    description: "Streamline financial tracking and reporting.",
    icon: trello,  // Replace "Slack" with the appropriate icon name if different
    link: "/apps",
  },
  {
    name: "Inventory & Manufacturing",
    description: "Optimize production management.",
    icon: trello,  // Replace "Slack" with the appropriate icon name if different
    link: "/apps",
  },
  {
    name: "Human Resources",
    description: "Manage HR tasks with ease.",
    icon: trello,  // Replace "Slack" with the appropriate icon name if different
    link: "/apps",
  },
  {
    name: "Services",
    description: "Boost customer interaction and satisfaction.",
    icon: trello,  // Replace "Slack" with the appropriate icon name if different
    link: "/apps",
  },
];


const integrations = [
  {
    name: "Productivity",
    description:
      "Enhance work efficiency.",
    icon: trello,
    link: "/integrations",
  },

  {
    name: "Collaboration",
    description:
      "Connect teams for smoother cooperation.",
    icon: trello,
    link: "/integrations",
  },

  {
    name: "Customer Support & CRM",
    description:
      "Elevate customer engagement and tracking.",
    icon: trello,
    link: "/integrations",
  },

  {
    name: "Analytics & Data Analysis",
    description:
      "Gain insights with powerful data analytics.",
    icon: trello,
    link: "/integrations",
  },

  {
    name: "Marketing & Sales",
    description: "Amplify marketing and sales impact.",
    icon: trello,
    link: "/integrations",
  },
  {
    name: "Developer Tools",
    description: " Accelerate development cycles.",
    icon: trello,
    link: "/integrations",
  }
];

const appsIntegrations = [
  {
    name: "Applications",
    description:
      "Power your business with specialized apps.",
    Icon: MobileApp,
    link: "/apps",
  },

  {
    name: "Integrations",
    description:
      "Connect over 200+ tools with our easy to use Zapier integrations.",
    Icon: CloudServices,
    link: "/integrations",
  }
];


---

<Layout title="Integrations">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Apps & Integrations</Fragment>
      <Fragment slot="desc">
        Connect over 200+ tools with our easy to use apps & integrations.
      </Fragment>
    </Sectionhead>

    <div class="mt-14 max-w-3xl mx-auto flex flex-col items-center justify-center"></div>

    <div class="grid md:grid-cols-2 lg:grid-cols-2 my-24 gap-x-10 gap-y-24">
      {
        appsIntegrations.map((item) => (
        <div key={item.name} class="rounded-2xl relative flex items-center flex-col p-6 group bg-white transition ring-2 ring-slate-200/50 shadow hover:ring-slate-200 hover:shadow-md">
              <div class="ring-2 ring-slate-200/50 w-16 h-16 group-hover:ring-slate-200 transition shadow shadow-slate-100 rounded-lg grid place-items-center -mt-16 bg-white"> 
            <Picture
                  src={item.Icon}
                  alt={`${item.name} icon`}
                  formats={["avif", "webp", "svg"]}
                  sizes="(max-width: 1024px) 100vw, 50vw"
                  widths={[240, 540, 720]}
                  loading="lazy"
                  fetchpriority="high"
                  class="w-8 h-8"
                />
              </div>
            <h3 class="text-xl lg:text-2xl font-medium mt-4">{item.name}</h3>
            <p class="text-slate-600 mt-2 text-center [text-wrap:balance]">
              {item.description}
            </p>

            <div class="mt-3">
              <a
                href={item.link}
                class="text-sm px-2 transition py-1 text-indigo-600 hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded-full">
                Learn more
                <span class="absolute inset-0" />
              </a>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Applications -->

    <h2 class="text-2xl lg:text-2xl font-bold lg:tracking-tight mt-4 text-center">
      All-In-One Suite of Business Tools
    </h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 my-24 gap-x-10 gap-y-24">
      {
      applications.map((item) => (
        <div key={item.name} class="rounded-2xl relative flex items-center flex-col p-6 group bg-white transition ring-2 ring-slate-200/50 shadow hover:ring-slate-200 hover:shadow-md">
            <div class="ring-2 ring-slate-200/50 w-16 h-16 group-hover:ring-slate-200 transition shadow shadow-slate-100 rounded-lg grid place-items-center -mt-16 bg-white"> 
              <Picture
                src={item.icon}
                alt={`${item.name} icon`}
                formats={["avif", "webp"]}
                sizes="(max-width: 1024px) 100vw, 50vw"
                widths={[240, 540, 720]}
                loading="lazy"
                fetchpriority="high"
                class="w-8 h-8"
              />
            </div>
    
            <h3 class="text-lg text-center font-medium mt-4">{item.name}</h3>
            <p class="text-slate-600 mt-2 text-center [text-wrap:balance]">
                {item.description}
            </p>
    
            <div class="mt-3 text-center">
                <a
                href={item.link}
                class="text-sm px-2 transition py-1 text-indigo-600 hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded-full">
                    View Applications
                    <span class="absolute inset-0" />
                </a>
            </div>
        </div>
      ))
      }
    </div>       

    <h2 class="text-2xl lg:text-2xl font-bold lg:tracking-tight mt-4 text-center">
      Seamlessly Expand Your Toolkit With Integrations
    </h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 my-24 gap-x-10 gap-y-24">
      {
      integrations.map((item) => (
        <div key={item.name} class="rounded-2xl relative flex items-center flex-col p-6 group bg-white transition ring-2 ring-slate-200/50 shadow hover:ring-slate-200 hover:shadow-md">
            <div class="ring-2 ring-slate-200/50 w-16 h-16 group-hover:ring-slate-200 transition shadow shadow-slate-100 rounded-lg grid place-items-center -mt-16 bg-white"> 
              <Picture
                src={item.icon}
                alt={`${item.name} icon`}
                formats={["avif", "webp"]}
                sizes="(max-width: 1024px) 100vw, 50vw"
                widths={[240, 540, 720]}
                loading="lazy"
                fetchpriority="high"
                class="w-8 h-8"
              />
            </div>
    
            <h3 class="text-lg text-center font-medium mt-4">{item.name}</h3>
            <p class="text-slate-600 mt-2 text-center [text-wrap:balance]">
                {item.description}
            </p>
    
            <div class="mt-3 text-center">
                <a
                href={item.link}
                class="text-sm px-2 transition py-1 text-indigo-600 hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded-full">
                    View Integrations
                    <span class="absolute inset-0" />
                </a>
            </div>
        </div>
      ))
      }
    </div>   

  </Container>
</Layout>


