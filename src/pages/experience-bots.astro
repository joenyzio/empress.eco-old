---
import { getCollection } from "astro:content";
import Badge from "@components/ui/badge.astro";
import { Picture } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import heroImage from "../assets/hero-screenshot.png";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Link from "@components/ui/link.astro";
import EmployeeImg from "../assets/employee.jpg";
import Logos from "@components/logos.astro";
import { Icon } from "astro-icon";
import Cta from "@components/cta.astro";
import Card from "@components/card.astro";
import IntegrationImg from "../assets/integrations.svg?url";
import FeatureImgOne from "../assets/features/2.png";
import FeatureImgTwo from "../assets/features/2.png";
import FeatureImgThree from "../assets/features/3.png";
import FeatureImg1 from "../assets/features/6.png";
import FeatureImg2 from "../assets/features/2.png";
import { Picture, Image } from "astro:assets";

// Filter team entries with 'draft: false' & date before current date
const publishedTeamMembers = await getCollection("team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});

const features = [
  {
    "title": "Tailored Conversational Paths",
    "description": "Infuse your bot with content that resonates, ensuring every user feels the personal touch.",
    "icon": "fluent:document-javascript-24-regular"
  },
  {
    "title": "Real-time Feedback Collection",
    "description": "Equip yourself with detailed insights directly from user interactions.",
    "icon": "fluent:trophy-24-regular"
  },
  {
    "title": "24/7 User Assistance",
    "description": "Ensure your audience always has a helping hand, powered by your content.",
    "icon": "fluent:box-24-regular"
  },
  {
    "title": "Your Content, Delivered Right",
    "description": "Enhance user engagement by delivering the right content at the right time.",
    "icon": "fluent:document-javascript-24-regular"
  },
  {
    "title": "Integration, Simplified",
    "description": "Integrate your bot effortlessly with your preferred tools.",
    "icon": "fluent:trophy-24-regular"
  },
  {
    "title": "Event-Driven Responses",
    "description": "Your bot responds to specific triggers, ensuring you're always relevant.",
    "icon": "fluent:box-24-regular"
  }
];
---

<Layout title="About" footerMargin={false}>
  <div class="overflow-x-clip">
    <Container>
      <main class="grid lg:grid-cols-5 place-items-center relative">
        <div
          class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-200 right-0 top-0">
        </div>
        <div
          class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-200 right-56 top-10">
        </div>
        <div class="max-w-sm md:max-w-max lg:col-span-2">
          <h1
            class="text-3xl lg:text-4xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter [text-wrap:balance] text-center lg:text-start">
            Experience Bots
          </h1>
          <p
            class="text-lg mt-4 max-w-lg text-slate-600 [text-wrap:balance] text-center lg:text-start">
            Equip your platform with self-evolving AI. Every interaction becomes more insightful, fostering authentic connections with your users through your very own chatbot.
          </p>
          <div
            class="mt-6 flex flex-col sm:flex-row sm:justify-center lg:justify-start gap-3">
            <Link
              href="https://web3templates.com/templates/astroship-pro-astro-saas-website-template"
              target="_blank"
              class="flex gap-1 items-center justify-center bg-brand"
              rel="noopener">
              Get Started
            </Link>
            <Link
              size="lg"
              style="outline"
              rel="noopener"
              href="https://github.com/surjithctly/astroship"
              class="flex gap-1 items-center justify-center border-brand text-brand"
              target="_blank">
              Free Version
            </Link>
          </div>
        </div>
        <div class="py-3 lg:col-span-3 lg:-mr-44">
          <Picture
            src={heroImage}
            alt="Astronaut in the air"
            formats={["avif", "webp"]}
            sizes="(max-width: 1024px) 100vw, 50vw"
            widths={[240, 540, 720, heroImage.width]}
            loading="eager"
            fetchpriority="high"
          />
        </div>
      </main>
    </Container>
  </div>
  

  <Container>
  
    <div class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center">
      <Badge color="purple">Maximize User Engagement</Badge>
      <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-4 text-center">
        The Ultimate AI-Driven Experience Hub
      </h2>
      <p class="text-lg mt-4 text-slate-600 text-center [text-wrap:pretty]">
        Elevate user experiences by integrating your unique content into Experience Bots. Ensure every interaction is specially tailored for your audience.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 mt-10 gap-10">
      <Card color="indigo" size="sm">
        <Fragment slot="image">
          <Picture
            src={FeatureImgThree}
            alt="Feature image"
            formats={["avif", "webp"]}
            class="h-full w-full object-contain"
            loading="lazy"
          />
        </Fragment>
        <span slot="badge">Personalize Every Interaction</span>
        <span slot="title">Your Content, Their Unique Experience</span>
        <span slot="desc">
          Transform every conversation to reflect your brand's voice and values, offering a tailored journey for every user.</span
        >
      </Card>
    
      <Card color="purple" size="sm">
        <Fragment slot="image">
          <Picture
            src={FeatureImgTwo}
            alt="Feature image"
            formats={["avif", "webp"]}
            class="h-full w-full object-contain"
            loading="lazy"
          />
        </Fragment>
        <span slot="badge">Streamline and Automate Workflows</span>
        <span slot="title">Design Your Brand Ambassador</span>
        <span slot="desc">
          Embed your Experience Bots seamlessly, making content accessible and your processes more efficient.</span
        >
      </Card>
    
      <Card size="sm">
        <Fragment slot="image">
          <!-- // svg image. cannot use <picture/> as of now -->
          <Image
            src={IntegrationImg}
            alt="Feature image"
            width="909"
            height="823"
            class="h-full w-full object-contain"
            loading="lazy"
          />
        </Fragment>
        <span slot="badge">Gain Deeper Insights</span>
        <span slot="title">Analyze Real-Time Interactions</span>
        <span slot="desc">
          Enhance each interaction using your bot's ability to deliver profound real-time insights into user behavior.</span
        >
      </Card>
    </div>

      <div class="grid md:grid-cols-2 py-10">
