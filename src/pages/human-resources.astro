---
import { getCollection } from "astro:content";
import Badge from "@components/ui/badge.astro";
import { Picture } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import heroImage from "../assets/hero-screenshot.png";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Link from "@components/ui/link.astro";
import EmployeeImg from "../assets/employee.jpg";
import Logos from "@components/logos.astro";
import { Icon } from "astro-icon";
import Cta from "@components/cta.astro";
import Card from "@components/card.astro";
import IntegrationImg from "../assets/integrations.svg?url";
import FeatureImgOne from "../assets/features/2.png";
import FeatureImgTwo from "../assets/features/2.png";
import FeatureImgThree from "../assets/features/3.png";
import FeatureImg1 from "../assets/features/6.png";
import FeatureImg2 from "../assets/features/2.png";
import { Picture, Image } from "astro:assets";

// Filter team entries with 'draft: false' & date before current date
const publishedTeamMembers = await getCollection("team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});

const features = [
  {
    "title": "Learning and Development",
    "description": "Empress Academy offers continuous learning resources.",
    "icon": "fluent:document-javascript-24-regular"
  },
  {
    "title": "Integration Capabilities",
    "description": "Integrate with tools like Slack, Zapier, Intercom, etc., for streamlined operations.",
    "icon": "fluent:trophy-24-regular"
  },
  {
    "title": "AI-Powered Insights",
    "description": "Refine HR processes in real-time with anticipatory insights.",
    "icon": "fluent:box-24-regular"
  },
  {
    "title": "Experience Bots",
    "description": "Engage employees across platforms, answering queries and offering support.",
    "icon": "fluent:document-javascript-24-regular"
  },
  {
    "title": "Global Engagement Assistant",
    "description": "Offer multilingual support for diverse employee bases, breaking language barriers.",
    "icon": "fluent:trophy-24-regular"
  },
  {
    "title": "Cross-Platform Consistency",
    "description": "Personalized HR experience across devices, from smartphones to desktops.",
    "icon": "fluent:box-24-regular"
  }
];
---

<Layout title="About" footerMargin={false}>
  <div class="overflow-x-clip">
    <Container>
      <main class="grid lg:grid-cols-5 place-items-center relative">
        <div
          class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-200 right-0 top-0">
        </div>
        <div
          class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-200 right-56 top-10">
        </div>
        <div class="max-w-sm md:max-w-max lg:col-span-2">
          <h1
            class="text-3xl lg:text-4xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter [text-wrap:balance] text-center lg:text-start">
            Optimize Human Resources
          </h1>
          <p
            class="text-lg mt-4 max-w-lg text-slate-600 [text-wrap:balance] text-center lg:text-start">
            Empress provides a blend of cutting-edge technology and AI-driven insights to streamline recruitment, enhance employee engagement, and optimize HR processes.
          </p>
          <div
            class="mt-6 flex flex-col sm:flex-row sm:justify-center lg:justify-start gap-3">
            <Link
              href="https://web3templates.com/templates/astroship-pro-astro-saas-website-template"
              target="_blank"
              class="flex gap-1 items-center justify-center bg-brand"
              rel="noopener">
              Get Started
            </Link>
            <Link
              size="lg"
              style="outline"
              rel="noopener"
              href="https://github.com/surjithctly/astroship"
              class="flex gap-1 items-center justify-center border-brand text-brand"
              target="_blank">
              Free Version
            </Link>
          </div>
        </div>
        <div class="py-3 lg:col-span-3 lg:-mr-44">
          <Picture
            src={heroImage}
            alt="Astronaut in the air"
            formats={["avif", "webp"]}
            sizes="(max-width: 1024px) 100vw, 50vw"
            widths={[240, 540, 720, heroImage.width]}
            loading="eager"
            fetchpriority="high"
          />
        </div>
      </main>
    </Container>
  </div>
  

  <Container>
  
    <div class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center">
      <Badge color="purple">HR Excellence</Badge>
      <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-4 text-center">
        Modern HR Solutions
      </h2>
      <p class="text-lg mt-4 text-slate-600 text-center [text-wrap:pretty]">
        Streamline and optimize your HR processes with our all-encompassing platform.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 mt-10 gap-10">
      <Card color="indigo" size="sm">
        <Fragment slot="image">
          <Picture
            src={FeatureImgThree}
            alt="Feature image"
            formats={["avif", "webp"]}
            class="h-full w-full object-contain"
            loading="lazy"
          />
        </Fragment>
        <span slot="badge">Recruitment Mastery</span>
        <span slot="title">Streamlined Recruitment</span>
        <span slot="desc">
          Design, execute, and elevate your recruitment with integrated tools and impactful touchpoints.</span
        >
      </Card>
    
      <Card color="purple" size="sm">
        <Fragment slot="image">
          <Picture
            src={FeatureImgTwo}
            alt="Feature image"
            formats={["avif", "webp"]}
            class="h-full w-full object-contain"
            loading="lazy"
          />
        </Fragment>
        <span slot="badge">Employee Connection</span>
        <span slot="title">Enhanced Engagement</span>
        <span slot="desc">
          Provide personalized experiences and engage employees consistently with AI-driven tools.</span
        >
      </Card>
    
      <Card size="sm">
        <Fragment slot="image">
          <!-- // svg image. cannot use <picture/> as of now -->
          <Image
            src={IntegrationImg}
            alt="Feature image"
            width="909"
            height="823"
            class="h-full w-full object-contain"
            loading="lazy"
          />
        </Fragment>
        <span slot="badge">Workflow Efficiency</span>
        <span slot="title">Efficient HR Workflows</span>
        <span slot="desc">
          Anticipate needs, deliver consistency, and break language barriers with our advanced tools.</span
        >
      </Card>
    </div>

      <div class="grid md:grid-cols-2 py-10">
        <div class="grid place-items-center pb-10 md:pb-0 md:order-2">
          <Picture
            src={FeatureImg1}
            alt="Feature Image"
            formats={["avif", "webp"]}
            loading="lazy"
          />
        </div>
    
      <div class="grid place-items-center">
        <div class="max-w-lg">
          <Badge color="purple" class="-ml-px">Behavior Analysis</Badge>
          <h3 class="text-2xl font-medium mt-4 [text-wrap:balance]">
            Real-Time Behavior Analytics
          </h3>
          <p class="mt-4 text-slate-600 [text-wrap:balance]">
            Understand and cater to employee interactions, needs, and patterns.
          </p>
          <ul class="grid mt-6 text-left gap-y-4">
            <li class="flex items-center gap-3 text-neutral-800">
              <Icon name="ph:check-circle-fill" class="w-5 h-5" />
    
              <span class="text-sm">Deep dive into employee behaviors</span>
            </li>
            <li class="flex items-center gap-3 text-neutral-800">
              <Icon name="ph:check-circle-fill" class="w-5 h-5" />
    
              <span class="text-sm">Forecast future HR trends</span>
            </li>
            <li class="flex items-center gap-3 text-neutral-800">
              <Icon name="ph:check-circle-fill" class="w-5 h-5" />
    
              <span class="text-sm">Unified insights dashboard</span>
            </li>
          </ul>
          <div class="flex items-center gap-4 mt-6">
            <Link href="#" size="sm" class="inline-flex items-center group gap-px">
              <span>Get Started</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                class="w-4 h-4 mt-px group-hover:translate-x-1 transition-transform">
                <path
                  fill-rule="evenodd"
                  d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                  clip-rule="evenodd"></path>
              </svg>
            </Link>
          </div>
        </div>
      </div>
    </div>

    <div class="grid md:grid-cols-2 py-10">
      <div class="grid place-items-center pb-10 md:pb-0 md:order-2">
        <Picture
          src={FeatureImg1}
          alt="Feature Image"
          formats={["avif", "webp"]}
          loading="lazy"
        />
      </div>
  
    <div class="grid place-items-center">
      <div class="max-w-lg">
        <Badge color="purple" class="-ml-px">Team Collaboration</Badge>
        <h3 class="text-2xl font-medium mt-4 [text-wrap:balance]">
          Collaborative Planning Suite
        </h3>
        <p class="mt-4 text-slate-600 [text-wrap:balance]">
          Enhance HR strategy from ideation to execution with the empresss experience suite.
        </p>
        <ul class="grid mt-6 text-left gap-y-4">
          <li class="flex items-center gap-3 text-neutral-800">
            <Icon name="ph:check-circle-fill" class="w-5 h-5" />
  
            <span class="text-sm">Foster team collaboration</span>
          </li>
          <li class="flex items-center gap-3 text-neutral-800">
            <Icon name="ph:check-circle-fill" class="w-5 h-5" />
  
            <span class="text-sm">Improve content quality</span>
          </li>
          <li class="flex items-center gap-3 text-neutral-800">
            <Icon name="ph:check-circle-fill" class="w-5 h-5" />
  
            <span class="text-sm">Ensure alignment in HR strategy</span>
          </li>
        </ul>
        <div class="flex items-center gap-4 mt-6">
          <Link href="#" size="sm" class="inline-flex items-center group gap-px">
            <span>Get Started</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="w-4 h-4 mt-px group-hover:translate-x-1 transition-transform">
              <path
                fill-rule="evenodd"
                d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                clip-rule="evenodd"></path>
            </svg>
          </Link>
        </div>
      </div>
    </div>
  </div> 

    

  <div class="grid md:grid-cols-2 py-10">
    <div class="grid place-items-center pb-10 md:pb-0 md:order-2">
      <Picture
        src={FeatureImg1}
        alt="Feature Image"
        formats={["avif", "webp"]}
        loading="lazy"
      />
    </div>

  <div class="grid place-items-center">
    <div class="max-w-lg">
      <Badge color="purple" class="-ml-px">Expert Support</Badge>
      <h3 class="text-2xl font-medium mt-4 [text-wrap:balance]">
        Provide 24/7 Expert Assistance
      </h3>
      <p class="mt-4 text-slate-600 [text-wrap:balance]">
        Connect your team with expert knowledge anytime with on-demand virtual assistants.
      </p>
      <ul class="grid mt-6 text-left gap-y-4">
        <li class="flex items-center gap-3 text-neutral-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-sm">Intelligent AI-Powered Chatbots</span>
        </li>
        <li class="flex items-center gap-3 text-neutral-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-sm">Predictive Analytics for Strategic Actions</span>
        </li>
        <li class="flex items-center gap-3 text-neutral-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-sm">AI-Enhanced Personalization & Automations</span>
        </li>
      </ul>
      <div class="flex items-center gap-4 mt-6">
        <Link href="#" size="sm" class="inline-flex items-center group gap-px">
          <span>Get Started</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-4 h-4 mt-px group-hover:translate-x-1 transition-transform">
            <path
              fill-rule="evenodd"
              d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
              clip-rule="evenodd"></path>
          </svg>
        </Link>
      </div>
    </div>
  </div>
</div>



    <div class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center">
      <Badge color="purple">More Features</Badge>
      <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-4 text-center">
        Continuous Learning
      </h2>
      <p class="text-lg mt-4 text-slate-600 text-center [text-wrap:pretty]">
        Ensuring your HR teams can provide the best employee support
      </p>
    </div>

    <div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-8 md:gap-16">
      {
        features.map((item) => (
          <div class="flex flex-col gap-4 items-start group hover:bg-slate-50 hover:border-slate-100 border border-transparent rounded-lg transition-all md:-m-5 p-5">
            <div class="mt-1 bg-indigo-50 border shadow shadow-indigo-100/50 border-indigo-100 transition-colors rounded-lg grid place-items-center  p-2 w-10 h-10 shrink-0">
              <Icon class="text-indigo-500" name={item.icon} size="24" />
            </div>
            <div>
              <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
              <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center"></div>

  </Container>
  <Cta />
</Layout>
